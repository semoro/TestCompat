<idea-plugin>
    <id>org.jetbrains.kotlin.tools.kompot</id>
    <name>Kompot</name>

    <extensions defaultExtensionNs="com.intellij">
        <consoleFilterProvider implementation="org.jetbrains.kotlin.tools.kompot.idea.KompotConsoleFilterProvider"/>
        <localInspection language="UAST" shortName="KompotCompatibleCallInspection"
                         groupPath="Plugin DevKit"
                         enabledByDefault="true" level="WARNING"
                         implementationClass="org.jetbrains.kotlin.tools.kompot.idea.KompotCompatibleCallInspection"
                         groupName="Plugin DevKit" displayName="Kompot compatibility check"/>

    </extensions>
</idea-plugin>